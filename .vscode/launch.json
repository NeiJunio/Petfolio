    "version": "0.2.0",
    "configurations": [
        {
            "name": "C#: Petfolio.API Debug",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Petfolio.API/bin/Debug/net8.0/Petfolio.API.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Petfolio.API",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/swagger/index.html"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Users": "${workspaceFolder}"
            }
        }
    ]
}